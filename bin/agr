#!/usr/bin/bash

# compile run and remove file associated.

if [[ "$1" == "" ]]; then
  echo not specific file name
  exit 1
fi

if [[ "$1" == "" ]]; then
  filename=$(echo -n "$1" | cut -d '.' -f 1)
else
  filename="$1"
fi

echo "$filename"

as "$1" -o "$filename".o
gcc -o "$filename" "$filename".o -nostdlib
./"$filename"
rm "$filename".o "$filename"
