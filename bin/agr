#!/usr/bin/bash

# compile run and remove file associated.

if [[ "$1" == "" ]]; then
  echo not specific file name
  exit 1
fi

if [[ "$2" == "" ]]; then
  filename=$(echo -n "$1" | sed 's=./=='  | cut -d '.' -f 1)
else
  filename="$2"
fi


as "$1" --32 -o "$filename".o
gcc -o "$filename" -m32 "$filename".o -nostdlib
printf "output:\n\n"
./"$filename"
rm "$filename".o "$filename"
