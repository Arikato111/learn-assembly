#!/usr/bin/bash

# compile run and remove file associated.

if [[ "$1" == "" ]]; then
  echo not specific file name
  exit 1
fi

if [[ "$2" == "" ]]; then
  filename=$(echo -n "$1" | cut -d '.' -f 1)
else
  filename="$2"
fi

nasm -f elf64 "$1" -o "$filename".o
ld "$filename".o -o "$filename"
./"$filename"
rm "$filename".o "$filename"
